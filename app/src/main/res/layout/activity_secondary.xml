<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second_activity_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activities.SecondaryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/secondToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_brown"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/ic_arrow_back_24dp" />
        <LinearLayout
            android:id="@+id/fake_toolbar"
            android:background="@color/tab_lg_brown"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:weightSum="4"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:padding="6dp"
                android:src="@drawable/ic_live_tv_white_24dp"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/tab_brown"
                android:padding="6dp"
                android:src="@drawable/ic_shopping_cart_black_24dp"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:padding="6dp"
                android:src="@drawable/ic_chat_bubble_outline_white_24dp"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:padding="6dp"
                android:src="@drawable/ic_account_circle_white24dp"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/second_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>